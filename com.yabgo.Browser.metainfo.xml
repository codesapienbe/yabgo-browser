<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.yabgo.Browser</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>
  <name>YABGO Browser</name>
  <summary>Yet Another Browser to Go and Visit</summary>
  
  <description>
    <p>
      YABGO Browser is a lightning-fast, gesture-driven web browser built for the modern user.
    </p>
    <p>Features:</p>
    <ul>
      <li>Gesture-powered navigation with intuitive corner swipes</li>
      <li>AI-powered assistant with MCP (Model Context Protocol) integration</li>
      <li>5 pre-configured MCP servers (Filesystem, Memory, Brave Search, Git, Time)</li>
      <li>Distraction-free dark theme interface</li>
      <li>Lightning-fast performance</li>
      <li>Enterprise-grade security</li>
      <li>Cross-platform support</li>
    </ul>
  </description>
  
  <launchable type="desktop-id">com.yabgo.Browser.desktop</launchable>
  
  <screenshots>
    <screenshot type="default">
      <caption>YABGO Browser main interface</caption>
      <image>https://raw.githubusercontent.com/codesapienbe/yabgo-browser/master/assets/screenshot.png</image>
    </screenshot>
  </screenshots>
  
  <url type="homepage">https://github.com/codesapienbe/yabgo-browser</url>
  <url type="bugtracker">https://github.com/codesapienbe/yabgo-browser/issues</url>
  <url type="help">https://github.com/codesapienbe/yabgo-browser/blob/master/README.md</url>
  
  <developer_name>Codesapien Network</developer_name>
  
  <provides>
    <binary>yabgo-browser</binary>
  </provides>
  
  <releases>
    <release version="1.1.1" date="2025-10-17">
      <description>
        <p>New features and bug fixes:</p>
        <ul>
          <li>Added 5 default MCP servers for enhanced functionality</li>
